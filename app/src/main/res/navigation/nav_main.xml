<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_menu"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.hn_2452.shoes_nike.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.hn_2452.shoes_nike.ui.cart.CartFragment"
        android:label="CartFragment"
        tools:layout="@layout/fragment_cart" />

    <fragment
        android:id="@+id/orderFragment"
        android:name="com.hn_2452.shoes_nike.ui.orders.OrderFragment"
        android:label="OrderFragment"
        tools:layout="@layout/fragment_order">

        <action
            android:id="@+id/action_orderFragment_to_trackOrderFragment"
            app:destination="@id/trackOrderFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />

    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.hn_2452.shoes_nike.ui.favorite.FavoriteFragment"
        android:label="FavoriteFragment"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.hn_2452.shoes_nike.ui.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/trackOrderFragment"
        android:name="com.hn_2452.shoes_nike.ui.orders.trackOrder.TrackOrderFragment"
        android:label="TrackOrderFragment"
        tools:layout="@layout/fragment_track_order" />

</navigation>