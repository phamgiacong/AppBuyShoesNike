<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="light_label">
        <item name="android:singleLine">true</item>
        <item name="fontWeight">100</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bold_label">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <style name="medium_bold_label" parent="bold_label">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="small_bold_label" parent="bold_label">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="shoes_image_rounded_corner">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="shoes_sold_textview">
        <item name="android:background">@color/background_secondary_color</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="My_Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <!-- color used by the text in the Tooltip -->
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Myslider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/My_Tooltip</item>
    </style>

</resources>